// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model ExerciseMedia {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  type      String   // 'image' o 'video'
  url       String
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  age       Int?
  weight    Float?
  height    Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
